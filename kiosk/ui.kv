#:import MDIcon kivymd.uix.label.MDIcon

# === Pagina Welcome / Login ===
<WelcomeScreen>:
    MDBoxLayout:
        orientation: "vertical"
        spacing: dp(25)
        padding: dp(30)
        MDLabel:
            text: "Bun venit la Kiosk LTS"
            halign: "center"
            font_style: "H4"

        MDTextField:
            id: name_field
            hint_text: "Nume utilizator"
            icon_right: "account"
            size_hint_x: 0.8
            pos_hint: {"center_x": 0.5}

        MDRaisedButton:
            text: "ConecteazƒÉ-te"
            md_bg_color: app.theme_cls.primary_color
            size_hint_x: 0.5
            pos_hint: {"center_x": 0.5}
            on_release: root.login()

        Widget:

# === Pagina Home ===
<HomeScreen>:
    MDBoxLayout:
        orientation: "vertical"
        padding: dp(20)
        spacing: dp(20)
        MDLabel:
            text: "üè† Pagina principalƒÉ"
            halign: "center"
            font_style: "H5"
        MDBoxLayout:
            spacing: dp(10)
            size_hint_y: None
            height: dp(50)
            MDRaisedButton:
                text: "Citire Live"
                on_release: app.root.current = "live"
