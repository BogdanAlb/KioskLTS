#:import MDCard kivymd.uix.card.MDCard

<WelcomeScreen>:
    MDBoxLayout:
        orientation: "vertical"
        padding: dp(40)
        spacing: dp(20)
        MDLabel:
            text: "Bun venit la"
            halign: "center"
            font_style: "H5"
        MDLabel:
            text: "Lineartechnik Stuttgart GmbH"
            halign: "center"
            font_style: "H4"
            theme_text_color: "Custom"
            text_color: app.theme_cls.primary_color

        Widget:
            size_hint_y: 0.1

        MDCard:
            orientation: "vertical"
            size_hint: (0.85, None)
            height: dp(300)
            pos_hint: {"center_x": 0.5}
            padding: dp(25)
            spacing: dp(15)
            md_bg_color: (0.15, 0.15, 0.2, 1)
            radius: [20]

            MDLabel:
                text: "CreeazƒÉ primul utilizator"
                halign: "center"
                font_style: "H6"

            MDTextField:
                id: name_field
                hint_text: "Nume utilizator"
                icon_right: "account"

            MDTextField:
                id: password_field
                hint_text: "ParolƒÉ"
                password: True
                icon_right: "lock"

            MDRaisedButton:
                text: "CreeazƒÉ profil"
                md_bg_color: app.theme_cls.primary_color
                on_release: root.create_user()


<LoginScreen>:
    MDBoxLayout:
        orientation: "vertical"
        padding: dp(40)
        spacing: dp(20)
        MDLabel:
            text: "Autentificare utilizator"
            halign: "center"
            font_style: "H4"
            theme_text_color: "Custom"
            text_color: app.theme_cls.primary_color

        Widget:
            size_hint_y: 0.1

        MDCard:
            orientation: "vertical"
            size_hint: (0.85, None)
            height: dp(300)
            pos_hint: {"center_x": 0.5}
            padding: dp(25)
            spacing: dp(15)
            md_bg_color: (0.15, 0.15, 0.2, 1)
            radius: [20]

            MDTextField:
                id: login_user
                hint_text: "Nume utilizator"
                icon_right: "account"

            MDTextField:
                id: login_pass
                hint_text: "ParolƒÉ"
                password: True
                icon_right: "lock"

            MDRaisedButton:
                text: "Autentificare"
                md_bg_color: app.theme_cls.primary_color
                on_release: root.login()

        Widget:
            size_hint_y: 0.3


<HomeScreen>:
    MDBoxLayout:
        orientation: "vertical"
        padding: dp(20)
        spacing: dp(20)
        MDLabel:
            text: "üè† Pagina principalƒÉ"
